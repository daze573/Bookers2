<div class="container">
  <div class="row">
    <%= render 'books/list', books: @books %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @books.each do |book| %>
              <td><%= image_tag 'sample-author1.jpg' %></td>
              <td><a href="/books/:id"><%= book.title %></a></td>
              <td><%= book.body %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>

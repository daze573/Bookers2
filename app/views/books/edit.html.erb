<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h2>Eding Book</h2>
      <div class="form-froup">
        <%= form_with model: @book do |f| %>
          <%= f.label :title %><br>
          <%= f.text_field :title, class:"form-control" %><br>
          <%= f.label :Opinion %><br>
          <%= f.text_area :body, class:"form-control" %><br>
          <%= f.submit 'Update Book', class:"btn btn-success mb-2" %><br>
          <%= link_to "show", book_path(current_user) %>
          <text>|</text>
          <%= link_to "Back", books_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>

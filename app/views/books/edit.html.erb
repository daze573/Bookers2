<h2>Eding Book</h2>
<%= form_with model: @book do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :Opinion %><br>
  <%= f.text_area :body %><br>
  <%= f.submit 'Update Book', class:"btn btn-success mt-2" %><br>
  <%= link_to "show", book_path(current_user) %>
<% end %>
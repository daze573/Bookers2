<div class="col-md-3">
  <% if book.errors.any? %>
    <%= book.errors.count %>error prohibited this obj from being saved:
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <h2>User info</h2>
  <table class="table">
    <%= image_tag book.user.get_profile_image(100,100) %>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= book.user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= book.user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
  <div>
    <h1>New book</h1>
    <div class="form-group">
      <%= form_with model:book, lical:true do |f| %>
        <%= f.label :title %><br>
        <%= f.text_field :title, class:"form-control" %><br>
        <%= f.label :Opinion %><br>
        <%= f.text_area :body, class:"form-control" %><br>
        <%= f.submit 'Create Book', class:"btn btn-success mt-2" %>
      <% end %>
    </div>
  </div>
</div>
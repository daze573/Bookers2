<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <%= image_tag 'no_image.jpg' %>
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th class="col">introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <a href="/users/:id/edit"><button type="button" class="btn btn-outline-secondary"><i class="fas fa-user-cog"></i></button></a>
      <div>
        <h1>New book</h1>
          <%= form_with model: @book do |f| %>
            <p>Title</p>
            <%= f.text_field :title %>
            <p>Opinion</p>
            <%= f.text_area :body %><br>
            <%= f.submit 'Create Book', class:"btn btn-success mt-2" %>
          <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @books.each do |book| %>
              <td><%= image_tag 'sample-author1.jpg' %><a href="/users/:id"><%= current_user.name %></a></td>
              <td><a href="/books/:id"><%= book.title %></a></td>
              <td><%= book.body %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>



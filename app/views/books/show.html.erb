<div class="container">
  <div class="row">
    <%= render 'info', book: @book %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
              <td>
                <%= link_to @book.title, book_path(:id) %>
              </td>
              <td><%= @book.body %></td>
            </tr>
          </tbody>
        </table>
      </div>
  </div>
</div>

